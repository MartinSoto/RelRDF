#!/usr/bin/env python

import sys
import imp

import gtk

import relrdf
from relrdf.graph import RdfCanvas
from relrdf.error import InstantiationError
from relrdf.factory import parseCmdLineArgs


def error(msg):
    print >> sys.stderr, _("error: %s") % msg
    sys.exit(1)


if len(sys.argv) < 3:
    print >> sys.stderr, \
          _("usage: rdfcanvas <file type> "
            ":<model base type> [<model base params] "
            ":<model type> [<model params>] "
            ":<graphModule> [<graph factory params>]")
    sys.exit(1)

argv = list(sys.argv[1:])

try:
    baseType, baseArgs = parseCmdLineArgs(argv, 'model base')
    modelBase = relrdf.getModelBase(baseType, **baseArgs)

    modelType, modelArgs = parseCmdLineArgs(argv, 'model')
    model = modelBase.getModel(modelType, **modelArgs)
except InstantiationError, e:
    error(e)

try:
    # Try to load the module
    graphModeName, factArgs = parseCmdLineArgs(argv, 'graph module')

    module = imp.load_module(graphModeName,
                             *imp.find_module(graphModeName))
except ImportError, e:
    error(e)

# Run the factory.
factName = factArgs.get('factoryName', 'graphFactory')
gr, engine = getattr(module, factName)(model, **factArgs)

cv = RdfCanvas(gr, engine)
gtk.main()
